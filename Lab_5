// task 1

#include <iostream>
#include <cmath>

using namespace std;

int main() {
    
     setlocale(LC_ALL, "Ukrainian");
    
    double x, y;

    for (int i = 1; i <= 5; i++) {
        cout << "Введіть значення x" << i << ": ";
        cin >> x;

        y = pow(sin(x), 5) + fabs(5 * x - 1.5);

        cout << "Значення функції при x = " << x << " дорівнює " << y << endl;
    }

    return 0;
}

//task 2 

#include <iostream>
using namespace std;

int main() {
    
    setlocale(LC_ALL, "Ukrainian");
    
    int num;
    int dobutok = 1;

    for (int i = 1; i <= 10; i++) {
        cout << "Введіть натуральне число №" << i << ": ";
        cin >> num;

        dobutok *= num;

        cout << "Добуток введених натуральних чисел = " << dobutok << endl;
    }

    return 0;
}
